import React, { useState, useEffect } from 'react';
import axios from 'axios';
import './App.css'; // Optional styling

const App = () => {
  const [messages, setMessages] = useState([]);
  const [input, setInput] = useState('');
  const [loading, setLoading] = useState(false);

  const handleSend = async () => {
    if (!input.trim()) return;

    const userMsg = { sender: 'user', content: input };
    setMessages(prev => [...prev, userMsg]);
    setInput('');
    setLoading(true);

    try {
      const res = await axios.post('http://localhost:5000/api/chat', {
        userId: 'mock-user',
        message: input
      });

      const botMsg = { sender: 'assistant', content: res.data.reply };
      setMessages(prev => [...prev, botMsg]);
    } catch (error) {
      console.error('Error:', error);
      setMessages(prev => [...prev, { sender: 'assistant', content: 'Something went wrong. Try again later.' }]);
    }

    setLoading(false);
  };

  return (
    <div className="app-container" style={styles.container}>
      <h2 style={styles.header}>üõçÔ∏è E-Shop Support Chat</h2>
      <div style={styles.chatBox}>
        {messages.map((msg, i) => (
          <div
            key={i}
            style={{
              ...styles.message,
              alignSelf: msg.sender === 'user' ? 'flex-end' : 'flex-start',
              backgroundColor: msg.sender === 'user' ? '#007bff' : '#e5e5ea',
              color: msg.sender === 'user' ? 'white' : 'black'
            }}
          >
            {msg.content}
          </div>
        ))}
        {loading && (
          <div style={{ ...styles.message, alignSelf: 'flex-start', backgroundColor: '#e5e5ea' }}>
            Typing...
          </div>
        )}
      </div>

      <div style={styles.inputArea}>
        <input
          type="text"
          style={styles.input}
          placeholder="Type your message..."
          value={input}
          onChange={(e) => setInput(e.target.value)}
          onKeyDown={(e) => e.key === 'Enter' && handleSend()}
        />
        <button style={styles.button} onClick={handleSend}>Send</button>
      </div>
    </div>
  );
};

const styles = {
  container: {
    maxWidth: 500,
    margin: '30px auto',
    fontFamily: 'Arial, sans-serif',
    border: '1px solid #ccc',
    borderRadius: 8,
    display: 'flex',
    flexDirection: 'column',
    height: '80vh',
    padding: 16
  },
  header: {
    textAlign: 'center',
    marginBottom: 10
  },
  chatBox: {
    flex: 1,
    overflowY: 'auto',
    display: 'flex',
    flexDirection: 'column',
    gap: 8,
    padding: 10,
    backgroundColor: '#f9f9f9',
    border: '1px solid #ddd',
    borderRadius: 8,
    marginBottom: 10
  },
  message: {
    padding: 10,
    borderRadius: 8,
    maxWidth: '75%',
  },
  inputArea: {
    display: 'flex',
    gap: 8
  },
  input: {
    flex: 1,
    padding: 10,
    borderRadius: 8,
    border: '1px solid #ccc'
  },
  button: {
    padding: '10px 16px',
    backgroundColor: '#007bff',
    color: 'white',
    border: 'none',
    borderRadius: 8,
    cursor: 'pointer'
  }
};

export default App;
